<p id="notice"><%= notice %></p>
<div class="inner">
<div id="senator-list">
  <% if @congress_person.party == "D" %>
    <div class="senator-card-democrat">
      <div class="democrat">
        <%= image_tag(@congress_person.picture_id) %>
      </div>
      <div class="politician-data">
        <h2><%= @congress_person.first_name %> <%= @congress_person.last_name %></h2>
        <p>Democrat</p>
        <p><%= @congress_person.title %></p>
      </div>
    </div>
  <% else %>
    <div class="senator-card-republican">
      <div class="republican">
        <%= image_tag(@congress_person.picture_id) %>
      </div>
      <div class="politician-data">
        <h2><%= @congress_person.first_name %> <%= @congress_person.last_name %></h2>
        <p>Republican</p>
        <p><%= @congress_person.title %></p>
      </div>
    </div>
  <% end %>
</div>
</div>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>


<div class="container">
  <div class="inner">
    <% @congress_person.articles.each do |article| %>
      <div class='senator-card-republican'>
        <%= link_to article.url do %>
          <center><h1><%= article.title %></h1></center>
          <p><%= article.first_paragraph %></p>
        <% end %>
        <p><small><%= article.source %> | <%= article.publication_date %></small></p>
      </div>
    <% end %>
  </div>
</div>





