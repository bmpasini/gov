<div class="container" data-no-turbolink>
  <div class="sentiment">
    <center>
      <h2>How people feel about <%= @congressperson.first_name %> <%= @congressperson.last_name %></h2>
      <button name="wordmap" class="btn">Wordmap</button>
      <button type="submit" name="sentiment" class ='btn'>Sentiment</button>
    </center>

    <div id="graph" class="aGraph" style="position:absolute;top:0px;left:0;"></div>
  	<div id="wordmap"></div>

    <div id="twitter_stuff" class="senator-card-democrat" style="width: 400px">
  	  <%@tweets_to_render.each do |tweet|%>
  	    <p><%=tweet.text%></p>
  	  <%end%>
    </div>
  </div>
</div>
