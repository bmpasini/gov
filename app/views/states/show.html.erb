<div class="container">
  <div class="inner">
    <h1><%= @state.abbreviation %></h1>

    <div id="senator-list">
      <center><h2>Senators</h2></center>

      <% @senators.each do |senator| %>
        <% if senator.party == "D" %>
          <div class="senator-democrat">
            <h3>
              <%= senator.first_name %> <%= senator.last_name %>
            </h3>
            <p>Votes with party <%= senator.votes_with_party_pct %>%
              Missed Votes <%= senator.missed_votes_pct %>%
            </p>
            <%= link_to 'Select', congress_person_path(senator), {class: 'btn'} %>
          </div>
        <% else %>
          <div class="senator-republican">
            <h3>
              <%= senator.first_name %> <%= senator.last_name %>
            </h3>
            <p>Votes with party <%= senator.votes_with_party_pct %>%
              Missed Votes <%= senator.missed_votes_pct %>%
            </p>
             <%= link_to 'Select', congress_person_path(senator), {class: 'btn'} %>
          </div>
        <% end %>
      <% end %>
    </div>
    <center><h2>Congress People</h2></center>
  </div>

  <div id="frame" data-no-turbolink>
    <ul class="slidee">
      <% @congress_people.each do |congress_person| %>
        <% if congress_person.party == "D" %>
          <li class="democrat">
            <h3>
              <%= congress_person.first_name %> <%= congress_person.last_name %>
            </h3>
            <p>Votes with party <%= congress_person.votes_with_party_pct %>%
              Missed Votes <%= congress_person.missed_votes_pct %>%
            </p>
            <%= link_to 'Select', congress_person_path(congress_person), {class: 'btn'} %>
          </li>
        <% else %>
          <li class="republican">
            <h3>
              <%= congress_person.first_name %> <%= congress_person.last_name %>
            </h3>
            <p>Votes with party <%= congress_person.votes_with_party_pct %>%
              Missed Votes <%= congress_person.missed_votes_pct %>%
            </p>
            <%= link_to 'Select', congress_person_path(congress_person), {class: 'btn'} %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

